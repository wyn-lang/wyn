// Works around import inlining issues by testing modules separately

import lexer_module

fn main() -> int {
    print("Wyn Compiler Module Test v1.5.0")
    print("")
    
    // Test source
    var source = "var x = 42"
    print("Source code:")
    print(source)
    print("")
    
    // Test lexer
    print("Testing lexer module...")
    var tokens = lexer_module_tokenize(source)
    print("Tokens generated:")
    print(tokens.len())
    
