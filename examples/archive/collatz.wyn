fn collatz(n: int) -> int {
    var steps = 0
    while n != 1 {
        if n % 2 == 0 {
            n = n / 2
        } else {
            n = 3 * n + 1
        }
        steps += 1
    }
    return steps
}

fn main() -> int {
    for var i = 1; i <= 10; i += 1 {
        print(collatz(i))
    }
    return 0
}
