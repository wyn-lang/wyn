// Test that spawn actually creates a thread
// We'll verify by having the spawned function modify a global variable

fn worker() -> int {
    // In a real thread, this would run concurrently
    return 42;
}

fn main() -> int {
    // Spawn the worker in a separate thread
    spawn worker();
    
    // Main thread continues immediately
    // Return different value to show main doesn't wait
    return 99;
}
