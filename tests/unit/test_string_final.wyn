// Phase 2 Complete: Test final string methods

fn test_pad_left() -> int {
    var text = "hi";
    var padded = text.pad_left(5, " ");
    var len = padded.len();
    // "   hi" = 5
    
    var already_long = "hello";
    var not_padded = already_long.pad_left(3, " ");
    var len2 = not_padded.len();
    // "hello" = 5 (no padding needed)
    
    return len + len2;  // 5 + 5 = 10
}

fn test_pad_right() -> int {
    var text = "hi";
    var padded = text.pad_right(5, " ");
    var len = padded.len();
    // "hi   " = 5
    
    var with_x = "a";
    var padded_x = with_x.pad_right(4, "x");
    var len2 = padded_x.len();
    // "axxx" = 4
    
    return len + len2;  // 5 + 4 = 9
}

fn test_chars() -> int {
    var text = "abc";
    var char_array = text.chars();
    var count = char_array.len();
    // Should have 3 characters
    
    var empty = "";
    var empty_chars = empty.chars();
    var empty_count = empty_chars.len();
    // Should have 0 characters
    
    return count + empty_count;  // 3 + 0 = 3
}

fn test_to_bytes() -> int {
    var text = "hi";
    var bytes = text.to_bytes();
    var count = bytes.len();
    // "hi" = 2 bytes
    
    var abc = "abc";
    var abc_bytes = abc.to_bytes();
    var abc_count = abc_bytes.len();
    // "abc" = 3 bytes
    
    return count + abc_count;  // 2 + 3 = 5
}

fn main() -> int {
    var pad_l = test_pad_left();
    var pad_r = test_pad_right();
    var chars_result = test_chars();
    var bytes_result = test_to_bytes();
    
    // Expected: 10 + 9 + 3 + 5 = 27
    return pad_l + pad_r + chars_result + bytes_result;
}
