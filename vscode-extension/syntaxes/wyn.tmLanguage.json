{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wyn",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#types" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.wyn",
          "match": "\\b(if|else|while|for|match|return|break|continue|import|export|from|as)\\b"
        },
        {
          "name": "keyword.other.wyn",
          "match": "\\b(fn|struct|enum|var|const|let|mut|pub|type|trait|impl)\\b"
        },
        {
          "name": "constant.language.wyn",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.wyn",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.wyn",
          "match": "\\\\."
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wyn",
          "match": "//.*$"
        },
        {
          "name": "comment.block.wyn",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.wyn",
          "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.wyn",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.wyn",
          "match": "\\b0[bB][01_]+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.wyn",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.wyn",
          "match": "\\b(int|float|bool|string|void|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64)\\b"
        }
      ]
    }
  },
  "scopeName": "source.wyn"
}
